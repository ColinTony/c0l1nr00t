---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header>
    <nav class="container">
        <a href={`/${lang}`} class="logo">c0l1nr00t</a>
        <div class="links">
            <a href={`/${lang}/blog`}>{t("nav.blog")}</a>
            <a href={`/${lang}/writeups`}>{t("nav.writeups")}</a>
            <a href={`/${lang}/about`}>{t("nav.about")}</a>
            <a href={`/${lang}/contact`}>{t("nav.contact")}</a>
        </div>
        <div class="actions">
            <a href="/files/cv.pdf" download class="btn-cv mono"
                >{t("cv.download")}</a
            >
        </div>
    </nav>
</header>

<style>
    header {
        border-bottom: 1px solid var(--border);
        background: rgba(10, 14, 20, 0.85);
        backdrop-filter: blur(12px);
        position: sticky;
        top: 0;
        z-index: 100;
        padding: 1rem 0;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    }
    nav {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
    }
    .logo {
        font-family: var(--font-mono);
        font-weight: bold;
        color: var(--neon-green);
        font-size: 1.2rem;
        text-shadow: 0 0 10px var(--glow-green);
        display: flex;
        align-items: center;
        width: fit-content;
    }
    .logo::after {
        content: "_";
        animation: blink 1s step-end infinite;
        margin-left: 2px;
        color: var(--neon-green);
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    .links {
        display: flex;
        gap: 2rem;
        justify-content: center;
    }
    .links a {
        color: var(--text);
        font-size: 0.95rem;
        font-family: var(--font-mono);
        transition: all 0.3s ease;
        position: relative;
        padding: 0.2rem 0;
    }
    .links a::before {
        content: ">";
        position: absolute;
        left: -15px;
        opacity: 0;
        transition: all 0.3s ease;
        color: var(--neon-cyan);
    }
    .links a:hover {
        color: var(--neon-cyan);
        text-shadow: 0 0 8px var(--glow-cyan);
        transform: translateY(-2px);
    }
    .links a:hover::before {
        opacity: 1;
        left: -12px;
    }

    .actions {
        display: flex;
        justify-content: flex-end;
    }

    .btn-cv {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--accent);
        border: 1px solid var(--accent);
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        text-decoration: none;
        transition: all 0.3s ease;
        background: rgba(0, 255, 65, 0.05);
    }
    .btn-cv:hover {
        background: var(--accent);
        color: #000;
        box-shadow: 0 0 10px var(--glow-green);
    }

    @media (max-width: 768px) {
        nav {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .links {
            gap: 1rem;
            flex-wrap: wrap;
            justify-content: center;
        }
        .actions {
            width: 100%;
            justify-content: center;
        }
    }
</style>
