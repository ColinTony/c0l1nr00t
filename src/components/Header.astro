---
import LangSwitch from "./LangSwitch.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header>
    <nav class="container">
        <a href={`/${lang}`} class="logo">c0l1nr00t</a>
        <div class="links">
            <a href={`/${lang}/blog`}>{t("nav.blog")}</a>
            <a href={`/${lang}/writeups`}>{t("nav.writeups")}</a>
            <a href={`/${lang}/about`}>{t("nav.about")}</a>
            <a href={`/${lang}/contact`}>{t("nav.contact")}</a>
        </div>
        <LangSwitch />
    </nav>
</header>

<style>
    header {
        border-bottom: 1px solid var(--border);
        background: rgba(10, 14, 20, 0.85);
        backdrop-filter: blur(12px);
        position: sticky;
        top: 0;
        z-index: 100;
        padding: 1rem 0;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    }
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .logo {
        font-family: var(--font-mono);
        font-weight: bold;
        color: var(--neon-green);
        font-size: 1.2rem;
        text-shadow: 0 0 10px var(--glow-green);
        display: flex;
        align-items: center;
    }
    .logo::after {
        content: "_";
        animation: blink 1s step-end infinite;
        margin-left: 2px;
        color: var(--neon-green);
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    .links {
        display: flex;
        gap: 1.5rem;
    }
    .links a {
        color: var(--text);
        font-size: 0.95rem;
        font-family: var(--font-mono);
        transition: all 0.3s ease;
        position: relative;
        padding: 0.2rem 0;
    }
    .links a::before {
        content: ">";
        position: absolute;
        left: -15px;
        opacity: 0;
        transition: all 0.3s ease;
        color: var(--neon-cyan);
    }
    .links a:hover {
        color: var(--neon-cyan);
        text-shadow: 0 0 8px var(--glow-cyan);
        transform: translateX(5px);
    }
    .links a:hover::before {
        opacity: 1;
        left: -12px;
    }

    @media (max-width: 600px) {
        nav {
            flex-wrap: wrap;
            gap: 1rem;
        }
        .links {
            order: 3;
            width: 100%;
            justify-content: center;
            gap: 1rem;
            font-size: 0.9rem;
        }
    }
</style>
