---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header>
    <nav class="container">
        <a href={`/${lang}`} class="logo">c0l1nr00t</a>

        <button id="menu-toggle" class="menu-toggle" aria-label="Toggle Menu">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </button>

        <div class="nav-content" id="nav-content">
            <div class="links">
                <a href={`/${lang}/blog`}>{t("nav.blog")}</a>
                <a href={`/${lang}/writeups`}>{t("nav.writeups")}</a>
                <a href={`/${lang}/about`}>{t("nav.about")}</a>
                <a href={`/${lang}/contact`}>{t("nav.contact")}</a>
            </div>
            <div class="actions">
                <a href="/files/cv.pdf" download class="btn-cv mono"
                    >{t("cv.download")}</a
                >
            </div>
        </div>
    </nav>
</header>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const navContent = document.getElementById("nav-content");

    menuToggle?.addEventListener("click", () => {
        menuToggle.classList.toggle("active");
        navContent?.classList.toggle("active");
    });
</script>

<style>
    header {
        border-bottom: 1px solid var(--border);
        background: rgba(10, 14, 20, 0.95); /* More opaque for mobile menu */
        backdrop-filter: blur(12px);
        position: sticky;
        top: 0;
        z-index: 1000;
        padding: 1rem 0;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    }
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }
    .logo {
        font-family: var(--font-mono);
        font-weight: bold;
        color: var(--neon-green);
        font-size: 1.2rem;
        text-shadow: 0 0 10px var(--glow-green);
        display: flex;
        align-items: center;
        z-index: 1001;
    }
    .logo::after {
        content: "_";
        animation: blink 1s step-end infinite;
        margin-left: 2px;
        color: var(--neon-green);
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    .nav-content {
        display: flex;
        align-items: center;
        gap: 2rem;
        flex-grow: 1;
        justify-content: space-between;
        margin-left: 2rem;
    }

    .links {
        display: flex;
        gap: 2rem;
        justify-content: center;
        flex-grow: 1;
    }
    .links a {
        color: var(--text);
        font-size: 0.95rem;
        font-family: var(--font-mono);
        transition: all 0.3s ease;
        position: relative;
        padding: 0.2rem 0;
    }
    .links a::before {
        content: ">";
        position: absolute;
        left: -15px;
        opacity: 0;
        transition: all 0.3s ease;
        color: var(--neon-cyan);
    }
    .links a:hover {
        color: var(--neon-cyan);
        text-shadow: 0 0 8px var(--glow-cyan);
        transform: translateY(-2px);
    }
    .links a:hover::before {
        opacity: 1;
        left: -12px;
    }

    .actions {
        display: flex;
        align-items: center;
    }

    .btn-cv {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--accent);
        border: 1px solid var(--accent);
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        text-decoration: none;
        transition: all 0.3s ease;
        background: rgba(0, 255, 65, 0.05);
        white-space: nowrap;
    }
    .btn-cv:hover {
        background: var(--accent);
        color: #000;
        box-shadow: 0 0 10px var(--glow-green);
    }

    /* Hamburger Menu */
    .menu-toggle {
        display: none;
        flex-direction: column;
        justify-content: space-between;
        width: 30px;
        height: 21px;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0;
        z-index: 1001;
    }
    .bar {
        width: 100%;
        height: 3px;
        background-color: var(--text);
        border-radius: 3px;
        transition: all 0.3s ease;
    }

    @media (max-width: 768px) {
        .menu-toggle {
            display: flex;
        }

        .nav-content {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background: rgba(10, 14, 20, 0.98);
            flex-direction: column;
            align-items: center;
            padding: 2rem 0;
            gap: 1.5rem;
            border-bottom: 1px solid var(--border);
            clip-path: polygon(
                0 0,
                100% 0,
                100% 0,
                0 0
            ); /* Hidden by default */
            transition: clip-path 0.4s ease-in-out;
            margin-left: 0;
        }

        .nav-content.active {
            clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
        }

        .links {
            flex-direction: column;
            align-items: center;
            gap: 1.5rem;
        }

        .menu-toggle.active .bar:nth-child(1) {
            transform: translateY(9px) rotate(45deg);
        }
        .menu-toggle.active .bar:nth-child(2) {
            opacity: 0;
        }
        .menu-toggle.active .bar:nth-child(3) {
            transform: translateY(-9px) rotate(-45deg);
        }
    }
</style>
