---
interface Props {
    href: string;
    title: string;
    date?: Date;
    description?: string;
    tags?: string[];
    difficulty?: string;
    platform?: string;
}

const { href, title, date, description, tags, difficulty, platform } =
    Astro.props;
---

<article class="card">
    <a href={href}>
        <h3>{title}</h3>
        {date && <p class="date mono">{date.toISOString().split("T")[0]}</p>}
        {description && <p class="desc">{description}</p>}

        {
            (difficulty || platform) && (
                <div class="meta mono">
                    {difficulty && (
                        <span class={`difficulty ${difficulty}`}>
                            {difficulty}
                        </span>
                    )}
                    {platform && <span>{platform}</span>}
                </div>
            )
        }
    </a>
</article>

<style>
    .card {
        background: var(--bg1);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 1.5rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
    }
    .card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            45deg,
            transparent 0%,
            rgba(0, 255, 65, 0.03) 100%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }
    .card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-glow);
        border-color: var(--neon-green);
    }
    .card:hover::before {
        opacity: 1;
    }
    .card a {
        color: inherit;
        text-decoration: none;
        flex: 1;
        display: flex;
        flex-direction: column;
        z-index: 1;
    }
    .card h3 {
        margin-top: 0;
        color: var(--accent2);
        margin-bottom: 0.5rem;
        transition: color 0.3s ease;
    }
    .card:hover h3 {
        color: var(--neon-cyan);
        text-shadow: 0 0 5px var(--glow-cyan);
    }
    .date {
        font-size: 0.85rem;
        color: var(--muted);
        margin-bottom: 0.5rem;
    }
    .desc {
        flex: 1;
        margin-bottom: 1rem;
        color: var(--text);
    }
    .meta {
        display: flex;
        gap: 1rem;
        font-size: 0.85rem;
        margin-top: auto;
        align-items: center;
    }
    .difficulty {
        text-transform: uppercase;
        font-weight: bold;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid transparent;
        font-size: 0.75rem;
    }
    .difficulty.easy {
        color: var(--neon-green);
        border-color: var(--neon-green);
        box-shadow: 0 0 5px var(--glow-green);
    }
    .difficulty.medium {
        color: var(--warn);
        border-color: var(--warn);
    }
    .difficulty.hard {
        color: var(--danger);
        border-color: var(--danger);
    }
    .difficulty.insane {
        color: #a371f7;
        border-color: #a371f7;
    }
</style>
