---
import { getCollection } from "astro:content";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { useTranslations } from "../../../i18n/utils";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    const esPosts = posts.filter((post) => post.id.startsWith("es/"));
    return esPosts.map((post) => ({
        params: { slug: post.slug.split("/")[1] },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const lang = "es";
const t = useTranslations(lang);
---

<BaseLayout title={post.data.title} description={post.data.description}>
    <article class="container section">
        <a href={`/${lang}/blog`} class="back-link mono"
            >&larr; {t("blog.back")}</a
        >

        <header class="post-header">
            <h1 class="title">{post.data.title}</h1>
            <div class="meta mono">
                <time datetime={post.data.date.toISOString()}>
                    {post.data.date.toISOString().split("T")[0]}
                </time>
                {post.data.tags.map((tag) => <span class="tag">#{tag}</span>)}
            </div>
        </header>

        <div class="content-wrapper">
            {
                headings.length > 0 && (
                    <aside class="toc">
                        <h3>TOC</h3>
                        <ul>
                            {headings.map((heading) => (
                                <li class={`toc-level-${heading.depth}`}>
                                    <a href={`#${heading.slug}`}>
                                        {heading.text}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </aside>
                )
            }

            <div class="markdown-body">
                <Content />
            </div>
        </div>
    </article>
</BaseLayout>

<style>
    .section {
        padding: 3rem 1rem;
    }
    .back-link {
        display: inline-block;
        margin-bottom: 2rem;
        color: var(--muted);
    }
    .post-header {
        margin-bottom: 3rem;
        border-bottom: 1px solid var(--border);
        padding-bottom: 2rem;
    }
    .title {
        color: var(--accent2);
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }
    .meta {
        display: flex;
        gap: 1rem;
        color: var(--muted);
        flex-wrap: wrap;
    }
    .tag {
        color: var(--accent);
    }

    .content-wrapper {
        display: flex;
        gap: 3rem;
        align-items: flex-start;
    }
    .toc {
        width: 250px;
        position: sticky;
        top: 100px;
        flex-shrink: 0;
        font-size: 0.9rem;
        border-right: 1px solid var(--border);
        padding-right: 1rem;
    }
    .toc h3 {
        margin-top: 0;
        color: var(--muted);
        font-size: 1rem;
    }
    .toc ul {
        list-style: none;
        padding: 0;
    }
    .toc li {
        margin-bottom: 0.5rem;
    }
    .toc a {
        color: var(--text);
        text-decoration: none;
    }
    .toc a:hover {
        color: var(--accent2);
    }
    .toc-level-3 {
        padding-left: 1rem;
    }

    .markdown-body {
        flex: 1;
        min-width: 0;
    }

    /* Markdown styles */
    .markdown-body :global(h2) {
        color: var(--accent);
        margin-top: 2rem;
    }
    .markdown-body :global(p) {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }
    .markdown-body :global(pre) {
        background: #1e1e1e !important;
        padding: 1.5rem;
        border-radius: var(--radius);
        overflow-x: auto;
        margin-bottom: 1.5rem;
        border: 1px solid var(--border);
    }
    .markdown-body :global(code) {
        font-family: var(--font-mono);
        color: var(--accent2);
    }
    .markdown-body :global(pre code) {
        color: inherit;
        background: transparent;
        padding: 0;
    }
    .markdown-body :global(img) {
        max-width: 100%;
        border-radius: var(--radius);
        border: 1px solid var(--border);
    }
    .markdown-body :global(blockquote) {
        border-left: 4px solid var(--accent);
        margin: 0;
        padding-left: 1rem;
        color: var(--muted);
        font-style: italic;
    }

    @media (max-width: 900px) {
        .content-wrapper {
            flex-direction: column;
        }
        .toc {
            width: 100%;
            position: static;
            border-right: none;
            border-bottom: 1px solid var(--border);
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
    }
</style>
