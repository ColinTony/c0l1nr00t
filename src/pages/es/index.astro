---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";
import { getCollection } from "astro:content";
import { useTranslations } from "../../i18n/utils";

const lang = "es";
const t = useTranslations(lang);

const posts = await getCollection("blog", ({ id, data }) => {
    return id.startsWith("es/") && !data.draft;
});

const sortedPosts = posts
    .sort((a, b) => {
        if (a.data.pinned && !b.data.pinned) return -1;
        if (!a.data.pinned && b.data.pinned) return 1;
        return b.data.date.valueOf() - a.data.date.valueOf();
    })
    .slice(0, 3);

const writeups = await getCollection("writeups", ({ id, data }) => {
    return id.startsWith("es/") && data.status === "published";
});
const sortedWriteups = writeups
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 3);
---

<BaseLayout title="c0l1nr00t | Lab" description={t("hero.lead")}>
    <section class="hero container">
        <p class="kicker mono">{t("hero.kicker")}</p>
        <h1>{t("hero.headline")}</h1>
        <p class="lead">{t("hero.lead")}</p>
        <div class="ctas">
            <a href={`/${lang}/writeups`} class="btn btn-primary mono"
                >{t("cta.writeups")}</a
            >
            <a href={`/${lang}/about`} class="btn btn-outline mono"
                >{t("cta.about")}</a
            >
        </div>
    </section>

    <section class="container section">
        <h2 class="mono">{t("section.latest_posts")}</h2>
        <div class="grid">
            {
                sortedPosts.map((post, i) => (
                    <div
                        class="animate__animated animate__fadeInUp"
                        style={`animation-delay: ${i * 0.1}s`}
                    >
                        <Card
                            href={`/${lang}/blog/${post.slug.split("/")[1]}`}
                            title={post.data.title}
                            date={post.data.date}
                            description={post.data.description}
                        />
                    </div>
                ))
            }
        </div>
    </section>

    <section class="container section">
        <div class="terminal-window animate__animated animate__fadeInUp">
            <div class="terminal-header">
                <div class="buttons">
                    <span class="dot red"></span>
                    <span class="dot yellow"></span>
                    <span class="dot green"></span>
                </div>
                <span class="title">c0l1nr00t@system:~</span>
            </div>
            <div class="terminal-body mono">
                <p>
                    <span class="prompt">➜</span>
                    <span class="command">init_sequence.sh</span>
                </p>
                <p class="output">
                    > Loading kernel modules... <span class="green">OK</span><br
                    />
                    > Mounting filesystems... <span class="green">OK</span><br
                    />
                    > Establishing secure connection... <span class="green"
                        >CONNECTED</span
                    ><br />
                    > User identity verified: <span class="neon-cyan"
                        >c0l1nr00t</span
                    >
                </p>
                <p>
                    <span class="prompt">➜</span>
                    <span class="command">cat status.txt</span>
                </p>
                <p class="output">
                    CURRENT_MISSION: <span class="neon-green"
                        >EXPLORE_LEARN_BREAK</span
                    ><br />
                    STATUS: <span class="neon-green">ONLINE</span><br />
                    LOCATION: <span class="neon-cyan">México</span>
                </p>
                <p>
                    <span class="prompt">➜</span>
                    <span class="cursor">_</span>
                </p>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .hero {
        padding: 6rem 1rem;
        border-bottom: 1px solid var(--border);
        position: relative;
        overflow: hidden;
    }
    .hero::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 50% 50%,
            rgba(0, 255, 65, 0.05) 0%,
            transparent 70%
        );
        pointer-events: none;
    }
    .kicker {
        color: var(--neon-green);
        margin-bottom: 1rem;
        font-family: var(--font-mono);
        display: inline-block;
        padding: 0.2rem 0.5rem;
        background: rgba(0, 255, 65, 0.1);
        border-radius: 4px;
        border: 1px solid rgba(0, 255, 65, 0.2);
    }
    .lead {
        font-size: 1.3rem;
        color: var(--text);
        max-width: 600px;
        margin-top: 1rem;
    }
    .ctas {
        margin-top: 2.5rem;
        display: flex;
        gap: 1rem;
    }
    .btn {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        border-radius: var(--radius);
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: 0.9rem;
    }
    .btn-primary {
        background: rgba(46, 160, 67, 0.2);
        color: var(--neon-green);
        border: 1px solid var(--neon-green);
        box-shadow: 0 0 10px rgba(0, 255, 65, 0.1);
    }
    .btn-primary:hover {
        background: var(--neon-green);
        color: #000;
        box-shadow: 0 0 20px var(--glow-green);
    }
    .btn-outline {
        border: 1px solid var(--border-bright);
        color: var(--text);
        background: transparent;
    }
    .btn-outline:hover {
        border-color: var(--neon-cyan);
        color: var(--neon-cyan);
        box-shadow: 0 0 15px var(--glow-cyan);
    }
    .section {
        padding: 4rem 1rem;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    /* Terminal Styles */
    .terminal-window {
        background: #0d1117;
        border: 1px solid var(--border);
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        max-width: 800px;
        margin: 0 auto;
        font-family: "JetBrains Mono", monospace;
    }
    .terminal-header {
        background: #161b22;
        padding: 0.5rem 1rem;
        display: flex;
        align-items: center;
        border-bottom: 1px solid var(--border);
        position: relative;
    }
    .buttons {
        display: flex;
        gap: 6px;
    }
    .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }
    .red {
        background: #ff5f56;
    }
    .yellow {
        background: #ffbd2e;
    }
    .green {
        background: #27c93f;
    }
    .title {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        color: var(--muted);
        font-size: 0.8rem;
    }
    .terminal-body {
        padding: 1.5rem;
        color: #c9d1d9;
        font-size: 0.95rem;
        line-height: 1.6;
    }
    .prompt {
        color: var(--neon-green);
        margin-right: 0.5rem;
    }
    .command {
        color: #fff;
    }
    .output {
        color: var(--muted);
        margin-bottom: 1rem;
        padding-left: 1.5rem;
    }
    .neon-green {
        color: var(--neon-green);
    }
    .neon-cyan {
        color: var(--neon-cyan);
    }
    .cursor {
        display: inline-block;
        width: 8px;
        height: 1.2em;
        background: var(--neon-green);
        animation: blink 1s step-end infinite;
        vertical-align: middle;
    }
    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }
    @media (max-width: 768px) {
        .hero {
            padding: 4rem 1rem;
        }
        .lead {
            font-size: 1.1rem;
        }
        .ctas {
            flex-direction: column;
            width: 100%;
        }
        .btn {
            width: 100%;
            text-align: center;
        }
        .terminal-window {
            font-size: 0.85rem;
        }
        .terminal-body {
            padding: 1rem;
        }
        .grid {
            grid-template-columns: 1fr;
        }
    }
</style>
